{
  "name": "prompt-runner",
  "version": "0.1.0",
  "description": "An Electron application for running prompts with LLMs, supporting template-based workflows and result analysis",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:renderer": "webpack serve --mode development",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "webpack --mode production",
    "pack": "electron-builder --dir",
    "dist": "npm run build:renderer && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,html,css}\"",
    "clean": "rimraf dist build node_modules/.cache"
  },
  "keywords": [
    "electron",
    "llm",
    "prompt",
    "template",
    "openai",
    "ollama",
    "jsonl",
    "analysis"
  ],
  "author": "PromptRunner Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.2",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "csv-parser": "^3.0.0",
    "keytar": "^7.9.0",
    "lodash": "^4.17.21",
    "sqlite3": "^5.1.6"
  },
  "optionalDependencies": {
    "chart.js": "^4.4.0"
  },
  "build": {
    "appId": "com.promptrunner.app",
    "productName": "PromptRunner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/shared/**/*",
      "dist/renderer/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/main/main.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
